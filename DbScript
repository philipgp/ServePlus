create table USER(
ID int  PRIMARY KEY, 
FIRST_NAME VARCHAR2(30),
MIDDLE_NAME VARCHAR2(30),
LAST_NAME VARCHAR2(30)
);



create table customer( ID INT PRIMARY KEY, USER_ID INT REFERENCES USER(ID));


CREATE TABLE SERVICE_REQUEST( ID INT PRIMARY KEY,CUSTOMER_ID INT REFERENCES CUSTOMER(ID),STATUS VARCHAR2(20))
CREATE TABLE COMPANY(ID INT PRIMARY KEY,NAME VARCHAR2(50));
create table ASSIGNER( ID INT PRIMARY KEY , USER_ID INT REFERENCES USER(ID),COMPANY_ID INT REFERENCES COMPANY(ID));
create table CATEGORY( ID INT PRIMARY KEY, NAME VARCHAR2(50));
create table SERVICE( ID INT PRIMARY KEY, NAME VARCHAR2(50), CATEGORY_ID INT REFERENCES CATEGORY(ID));
create table COMPANY_SERVICE( COMPANY_ID INT REFERENCES COMPANY(ID), SERVICE_ID INT REFERENCES SERVICE(ID),PRIMARY KEY(COMPANY_ID,SERVICE_ID));

create table LOCATION(
ID int  primary key PRIMARY KEY, 
LATITIDE VARCHAR2(20),
LONGITUDE  VARCHAR2(20)
); 



create table ADDRESS(
ID int  PRIMARY KEY, 
FIRST_LINE VARCHAR2(20),
SECOND_LINE VARCHAR2(20),
LOCATION_ID INT REFERENCES LOCATION(ID)
); 


create table SR_ACTION_HISTORY(
ID int   PRIMARY KEY, 
SERVICE_REQUEST_ID INT REFERENCES SERVICE_REQUEST(ID),
ACTION VARCHAR2(30)
);

create table WORKER( 
ID INT PRIMARY KEY , 
USER_ID INT REFERENCES USER(ID),
COMPANY_ID INT REFERENCES COMPANY(ID));